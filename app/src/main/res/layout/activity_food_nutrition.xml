<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gurki.cst2335_finalproject.FoodNutritionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/FNsearchEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/FNInputText"
            android:inputType="text"
            android:singleLine="false" />

        <Button
            android:id="@+id/FNsearchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FNSearch" />

    </LinearLayout>
    <Button
        android:id="@+id/FNgoBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FNgoBack" />
    <Button
        android:id="@+id/FNRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FNRefresh" />

    <ListView
        android:id="@+id/FNListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp" />

    <ProgressBar
        android:id="@+id/ourProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


</LinearLayout>
