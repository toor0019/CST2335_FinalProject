<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gurki.cst2335_finalproject.SearchActivity"
    >

    <ListView
        android:id="@+id/savedRoutes_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </ListView>
<ProgressBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/progressBar"
    android:visibility="invisible"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_centerInParent="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OC_stopEditText"
        android:layout_alignParentStart="true"
        android:layout_alignLeft="@id/OC_stopEditText"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/OC_searchButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="@string/OC_Search_Button"/>

</RelativeLayout>
